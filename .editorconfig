root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120


# Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false


# Ignore generated files
[*.{min.js,min.css,lock,json,map}]
insert_final_newline = false
trim_trailing_whitespace = false
